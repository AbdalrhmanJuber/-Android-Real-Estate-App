<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Price Range"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Min Price -->
    <TextView
        android:id="@+id/txt_min_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Min: $0"
        android:textColor="@color/primary_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/seekbar_min_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />

    <!-- Max Price -->
    <TextView
        android:id="@+id/txt_max_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max: $1,000,000"
        android:textColor="@color/primary_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/seekbar_max_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drag the sliders to set your desired price range"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:gravity="center" />

</LinearLayout>
